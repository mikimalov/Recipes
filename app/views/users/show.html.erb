<div class=" mt-5">
  <div class='container '>
    <div class=" card rounded-circle recipe-color">
      <div class="card-body text-center text-white mt-5">
        <h3><strong><%= @user.full_name %>'s cocktail recipes</strong></h3>
      </div>
      <div class="card-body text-center">
        <%= @user.email %>
      </div>
      <div class="card-body text-center">
        <%= link_to "Back", root_path, class: "nav-link text-white"%>
      </div>
    </div>
  </div>
</div>
<% @user.recipes.each do |recipe|%>
  <%= render 'recipes/recipe', recipe: recipe %>
<%end %>
